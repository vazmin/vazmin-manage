<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.github.vazmin.manage.component.dao.users.UserPrivilegeMapper">

    <sql id="tableName">user_privilege</sql>

    <sql id="columns_no_id">
        user_id, item_id, item_type
    </sql>

    <sql id="columns">
        id, <include refid="columns_no_id"/>
    </sql>

    <sql id="columns_join">
        a.id, a.user_id, a.item_id, a.item_type
    </sql>

    <sql id="dynamicWhere">
        <where>
            <if test="userId != null">user_id = #{userId}</if>
            <if test="itemId != null">AND item_id = #{itemId}</if>
            <if test="itemType != null">AND item_type = #{itemType}</if>
        </where>
    </sql>

    <sql id="dynamicWhereJoin">
        <where>
            <if test="userId != null">a.user_id = #{userId}</if>
            <if test="itemId != null">AND a.item_id = #{itemId}</if>
            <if test="itemType != null">AND a.item_type = #{itemType}</if>
            <if test="status != null">AND b.status = #{status}</if>
        </where>
    </sql>

    <select id="get" resultType="UserPrivilege" parameterType="long">
        SELECT <include refid="columns"/>
        FROM <include refid="tableName"/>
        WHERE id = #{id}
    </select>

    <select id="getByDynamicWhere" resultType="UserPrivilege">
        SELECT <include refid="columns"/>
        FROM <include refid="tableName"/>
        <include refid="dynamicWhere"/>
    </select>

    <select id="getCount" resultType="int">
        SELECT COUNT(1)
        FROM <include refid="tableName"/>
        <include refid="dynamicWhere"/>
    </select>

    <select id="getList" resultType="UserPrivilege">
        SELECT <include refid="columns"/>
        FROM <include refid="tableName"/>
        <include refid="dynamicWhere"/>
        <if test="orderField != null">
            ORDER BY ${orderField} <if test="orderSeq != null">${orderSeq}</if>
        </if>
    </select>

    <select id="getListByUserId" resultType="UserPrivilege" parameterType="long">
        SELECT <include refid="columns"/>
        FROM <include refid="tableName"/>
        WHERE user_id = #{userId}
    </select>

    <select id="getListLeftJoin" resultType="UserPrivilege">
        SELECT <include refid="columns_join"/>
        FROM <include refid="tableName"/> a
        LEFT JOIN manage_user b ON a.user_id = b.id
        <include refid="dynamicWhereJoin"/>
        <if test="orderField != null">
            ORDER BY ${orderField} <if test="orderSeq != null">${orderSeq}</if>
        </if>
    </select>

    <insert id="insert" parameterType="UserPrivilege" useGeneratedKeys="true"
            keyProperty="id" >
        INSERT INTO <include refid="tableName"/>
        (<include refid="columns_no_id"/>)
        VALUES
        (#{userId}, #{itemId}, #{itemType})
    </insert>

    <update id="update" parameterType="UserPrivilege">
        UPDATE <include refid="tableName"/>
        <set>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="itemId != null">item_id = #{itemId},</if>
            <if test="itemType != null">item_type = #{itemType}</if>
        </set>
        WHERE id = #{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM <include refid="tableName"/> WHERE id = #{id}
    </delete>

    <delete id="batchDelete">
        DELETE FROM <include refid="tableName"/>
        WHERE id IN
        <foreach item="item" index="index" collection="list"
                 open="(" separator="," close=")">
            #{item}
        </foreach>
    </delete>
</mapper>